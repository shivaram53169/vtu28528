import tkinter as tk
from datetime import datetime
def calculate_age():
    dob = entry.get()
    try:
birth_date = datetime.strptime(dob, "%d/%m/%Y")
    	    today = datetime.today()
    age = today.year - birth_date.year - ((today.month, today.day) < (birth_date.month, birth_date.day))
result_label.config(text=f"Your age is {age} years")
    except ValueError:
result_label.config(text="Please enter date in DD/MM/YYYY format")

root = tk.Tk()
root.title("Age Calculator")

tk.Label(root, text="Enter DOB (DD/MM/YYYY):").pack(pady=5)
entry = tk.Entry(root)
entry.pack(pady=5)

tk.Button(root, text="Calculate Age", command=calculate_age).pack(pady=5)
result_label = tk.Label(root, text="")
result_label.pack(pady=5)

root.mainloop()
