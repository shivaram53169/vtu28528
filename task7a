name = input("Enter Student Name: ")
marks = []
for i in range(5):
    m = int(input("Enter marks for subject:"))
marks.append(m)

grade = calculate_grade(marks)

print("Name   :", name)
print("Marks  :", marks)
print("Average:", sum(marks) / len(marks))
print("Grade  :", grade)

