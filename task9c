try:
student_marks = {"Math": 90, "Science": 85, "English": 80}

    total = 0
    subjects = ["Math", "Science", "English"]

    for subject in subjects:
        marks = student_marks[subject]   # Access marks of each subject
        if marks < 0 or marks > 100:
            raise ValueError("Marks for " + subject + " must be between 0 and 100.")
        total = total + marks

    average = total / len(subjects)

    if average >= 90:
        grade = 'A'
elif average >= 75:
        grade = 'B'
elif average >= 60:
        grade = 'C'
    else:
        grade = 'D'

print("Average Marks:", average)
print("Grade:", grade)

except KeyError:
print("Error Type: KeyError - Missing subject data.")
except ValueError:
print("Error Type: ValueError - Invalid marks entered.")
except Exception:
print("Error Type: General Exception - Unexpected error occurred.")
else:
print("Grade calculation completed successfully!")
finally:
print("End of student record processing.")
